extends ../common/common
block admin 
 .mws-panel.grid_8
  .mws-panel-header
    span 管理员添加
  .mws-panel-body.no-padding
    form.mws-form(action='/admin/userdoupdate' method="POST")
      .mws-form-inline
        .mws-form-row
          label.mws-form-label 管理员姓名
          .mws-form-item
            input.large(type='text' name="uname" value=`${data.uname}`)
        .mws-form-row
          label.mws-form-label 管理员密码
          .mws-form-item
            input.large(type='password' name="pwd" value=`${data.pwd}`)
        input(type="hidden" name="id" value=`${data.id}`)
      .mws-button-row
        input.btn.btn-danger(type='submit' value='提交')
        input.btn(type='reset' value='重置')
