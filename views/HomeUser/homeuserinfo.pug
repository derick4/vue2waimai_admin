extends ../common/common
block admin 
 .mws-panel.grid_8
  .mws-panel-header
    span
      i.icon-table
      |  会员详细信息
  .mws-panel-body.no-padding
    #DataTables_Table_1_wrapper.dataTables_wrapper(role='grid')
      #DataTables_Table_1_length.dataTables_length
        label
          | Show 
          select(size='1' name='DataTables_Table_1_length' aria-controls='DataTables_Table_1')
            option(value='10' selected='selected') 10
            option(value='25') 25
            option(value='50') 50
            option(value='100') 100
          |  entries
      #DataTables_Table_1_filter.dataTables_filter
        form(action="" method="") 
          label
            | 会员搜索: 
            input(type='text' name="keywords" aria-controls='DataTables_Table_1')
            button.btn.btn-primary 搜索 
      table#DataTables_Table_1.mws-datatable-fn.mws-table.dataTable(aria-describedby='DataTables_Table_1_info')
        thead
          tr(role='row')
            th.sorting_asc(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-sort='ascending' aria-label='Rendering engine: activate to sort column descending' style='width: 258px;') 序号
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Browser: activate to sort column ascending' style='width: 333px;') 真实姓名
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Platform(s): activate to sort column ascending' style='width: 309px;') 图像
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Engine version: activate to sort column ascending' style='width: 225px;') 手机号码
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Engine version: activate to sort column ascending' style='width: 225px;') 邮箱地址
        tbody(role='alert' aria-live='polite' aria-relevant='all')
        if data
          tr.odd
            td.sorting_1 #{data.id}
            td.Firefox #{data.realname}
            td  
              img(src=`https://sqqproject.oss-cn-hangzhou.aliyuncs.com/${data.pic}`, alt="" width="100px")
            td.Win #{data.phone}
            td.Win #{data.email}
        else 
          button.btn.btn-danger 当前会员没有详细信息
          
      #DataTables_Table_1_info.dataTables_info Showing 1 to 10 of 57 entries
      #DataTables_Table_1_paginate.dataTables_paginate.paging_full_numbers
        a#DataTables_Table_1_first.first.paginate_button.paginate_button_disabled(tabindex='0') First
        a#DataTables_Table_1_previous.previous.paginate_button.paginate_button_disabled(tabindex='0') Previous
        span
          a.paginate_active(tabindex='0') 1
          a.paginate_button(tabindex='0') 2
          a.paginate_button(tabindex='0') 3
          a.paginate_button(tabindex='0') 4
          a.paginate_button(tabindex='0') 5
        a#DataTables_Table_1_next.next.paginate_button(tabindex='0') Next
        a#DataTables_Table_1_last.last.paginate_button(tabindex='0') Last

